<div class="time-series-control__toggle">
  {{#if this.hasInteracted}}
    {{#if this.parentView.playing}}
      <img class="time-series-control__toggle__icon" src="/images/icons/pause.svg">
    {{else}}
      {{#if this.parentView.shouldReplay}}
        <img class="time-series-control__toggle__icon" src="/images/icons/replay.svg">
      {{else}}
        <img class="time-series-control__toggle__icon" src="/images/icons/play.svg">
      {{/if}}
    {{/if}}
  {{else}}
    <span class="time-series-control__toggle__text">
      Watch this fireâ€™s progress
    </span>
  {{/if}}
</div>

<div class="time-series-control__text">
  <span>
    {{#if this.parentView.currentTime}}
      {{moment-format this.parentView.currentTime 'MMMM DD, YYYY'}}
    {{else}}
      Loading...
    {{/if}}
  </span>
</div>

{{#if this.hasInteracted}}
  <div class="time-series-control__progress">
    <div class="time-series-control__progress-bar {{unless this.parentView.currentTime 'time-series-control__progress-bar--resetting'}}" style="width: {{this.parentView.progress}};"></div>
  </div>
{{/if}}