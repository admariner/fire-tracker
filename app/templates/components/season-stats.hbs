<h6 class="season-stats__heading">Fire Season 2017</h6>
{{#if stats.count}}
  <div class="season-stats__item season-stats__item--warning">
    <div class="season-stats__item__icon"></div>
    <div class="season-stats__item__description">
      <span class="season-stats__item__figure">
        <span class="season-stats__item__figure-title">Fires this year:</span> 
        <span class="season-stats__item__figure-number">{{comma-separate stats.count}}</span>
      </span>
      <span class="season-stats__item__trend">
        About average
      </span>
    </div>
  </div>
{{/if}}
{{#if stats.sum}}
  <div class="season-stats__item season-stats__item--danger">
    <div class="season-stats__item__icon"></div>
    <div class="season-stats__item__description">
      <span class="season-stats__item__figure">
        <span class="season-stats__item__figure-title">Acres Burned:</span> 
        <span class="season-stats__item__figure-number">{{comma-separate stats.sum}}</span>
      </span>
      <span class="season-stats__item__trend">
        Above average
      </span>
    </div>
  </div>
{{/if}}
