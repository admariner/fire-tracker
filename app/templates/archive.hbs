{{masthead-component id="l-archive__masthead"}}
<div id="l-archive">

  {{archive-search query=query id="l-archive__search" heading="Search the archives" background="/images/backgrounds/archive.png" filterResults='filterResults' placeholder="Enter a search term here."}}

  <div id="l-archive__grid" class="t-dark">
    <div id="l-archive__grid__container">
      {{#if filteredResults.length}}
        {{incidents-grid fires=searchResults}}
      {{else}}
        <div id="l-archive__no-results" class="fire-search__no-results">
          No results found.
        </div>
      {{/if}}
      {{#if hasMoreResults}}
        <div id="l-archive__loadimg-message" class="fire-search__loading-message">
          Loading more items...
        </div>
      {{/if}}
      {{infinite-scroller class='incidents-grid' trigger-at="60%" use-document=true on-load-more=(action 'loadMore')}}
    </div>
  </div>

</div>

{{footer-component id="l-footer"}}

